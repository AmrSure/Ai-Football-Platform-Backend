# AI Football Platform Production Environment Variables
# Copy this file to .env and update with your production values

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Database Configuration
DB_NAME=football_platform
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Alternative: Use DATABASE_URL for Heroku or similar platforms
# DATABASE_URL=postgres://user:password@host:port/database

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@footballplatform.com
CONTACT_EMAIL=contact@footballplatform.com
SUPPORT_EMAIL=support@footballplatform.com

# Alternative: Use Postmark for email
# POSTMARK_SERVER_TOKEN=your-postmark-token

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# AWS S3 Configuration (optional - for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry Configuration (optional - for error monitoring)
# SENTRY_DSN=your-sentry-dsn

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080

# Security Settings
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Gunicorn Settings
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Platform Settings
SITE_NAME=AI Football Platform
SITE_DESCRIPTION=Comprehensive football academy management platform
MAX_BOOKING_DURATION_HOURS=24
MIN_BOOKING_DURATION_HOURS=1
BOOKING_ADVANCE_DAYS=30
AUTO_CONFIRM_BOOKINGS=False
SEND_EMAIL_NOTIFICATIONS=True
SEND_SMS_NOTIFICATIONS=False

# Development/Testing (set to False in production)
DEBUG_TOOLBAR=False
